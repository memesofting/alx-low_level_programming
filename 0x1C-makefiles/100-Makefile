SRC = main.c school.c
OBJ = main.o school.o
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
CC = gcc $(CFLAGS)

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ) m.h
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ *.swp .*.swp $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
